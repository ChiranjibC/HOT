@model IEnumerable<BlockChainSI.Models.BatchViewModel>

@{
    ViewBag.Title = "Batch";
}

<h2>Batch Details</h2>

<p>
    <a href="javascript:void(0);" class="editLink" data-url="@Url.Action("Edit", "Batch")">Create New</a>
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BatchNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BatchDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BatchNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BatchDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a href="javascript:void(0);" class="editLink" data-url="@Url.Action("edit", "batch")" data-id="@item.BatchId">Edit</a>  |
                    <a href="javascript:void(0);" class="editLink" data-url="@Url.Action("delete", "batch")" data-id="@item.BatchId">Delete</a>
                </td>
            </tr>           
        }
    }
</table>
