@model IEnumerable<BlockChainSI.Models.DeviceViewModel>

@{
    ViewBag.Title = "Device";
}

<h2>Device Details</h2>

<p>
    <a href="javascript:void(0);" class="editLink" data-url="@Url.Action("Edit", "device")">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeviceNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeviceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeviceFamily.DeviceFamilyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogInterval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
    @if (Model != null) { 
        foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceFamily.DeviceFamilyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LogInterval)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a href="javascript:void(0);" class="editLink" data-url="@Url.Action("edit", "device")" data-id="@item.DeviceId">Edit</a>  |                    
                    <a href="javascript:void(0);" class="editLink" data-url="@Url.Action("delete", "device")" data-id="@item.DeviceId">Delete</a>
                </td>
            </tr>
        }
    }
</table>
