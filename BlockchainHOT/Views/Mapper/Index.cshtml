@model IEnumerable<BlockChainSI.Models.MapperViewModel>

@{
    ViewBag.Title = "Mapper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Batch to Device Mapping</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BatchNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeviceNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BatchNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MapId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MapId })
        </td>
    </tr>
}

</table>
